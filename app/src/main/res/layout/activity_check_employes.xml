<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EmployesApp.CheckEmployesActivity">


    <LinearLayout
        android:id="@+id/linearHeaders"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/check"
        android:gravity="center"
        android:orientation="vertical">

        <DigitalClock
            android:id="@+id/simpleDigitalClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_orange"
            android:fontFamily="sans-serif-light"
            android:textSize="50dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_orange"
            android:fontFamily="sans-serif-light"
            android:textSize="30dp"
            android:gravity="center"
            />

    </LinearLayout>



    <Button
        android:id="@+id/btnChekGo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/linearHeaders"
        android:background="@drawable/borderbtn"
        android:text="Entrada"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnChekExit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/btnChekGo"
        android:background="@drawable/borderbtn"
        android:text="Salida"
        android:textAllCaps="false"/>

</RelativeLayout>